extends layout.pug

block styles
  link(rel="stylesheet", href="/public/join-info.css")
block includes
  include ./mixins/input-block.pug
block header
  header
    button.prev 이전
    h1 회원가입
    button.submit 완료
block content
  main
    div.grid-block
      +inputBlock({ className: 'input-email', labelText: '이메일', type: 'text', placeholder: '', clearButton: true, checkLabel: true, alertText: '올바른 이메일을 입력해주세요.' })
      button.btn-duplicate.btn-small 중복확인
    div
      +inputBlock({ className: 'input-nickname', labelText: '닉네임', type: 'text', placeholder: '', clearButton: true, checkLabel: true, alertText: '닉네임을 입력해주세요.' })
    div
      +inputBlock({ className: 'input-pwd', labelText: '비밀번호', type: 'password', placeholder: '', clearButton: true, checkLabel: true, alertText: '10자 이상, 대문자, 소문자, 숫자 중 2종류이상 조합하셔야 합니다.' })
    div
      +inputBlock({ className: 'input-birth', labelText: '생년월일', type: 'text', placeholder: '예) 2000.01.01', clearButton: true, checkLabel: true, alertText: '올바른 생년월일을 입력해주세요.' })
    script(src="/js/join-info.js")
    