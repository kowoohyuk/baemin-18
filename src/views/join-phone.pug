extends layout.pug

block styles
  link(rel="stylesheet", href="/public/join-phone.css")
block includes
  include ./mixins/input-block.pug
block header
  header
    button.prev 이전
    h1 회원가입
    button.next 다음
block content
  main
    +inputBlock({ className: 'input-phone', labelText: '휴대전화', type: 'text', placeholder: '휴대전화 번호를 입력해주세요.', clearButton: true, checkLabel: true, alertText: '올바른 휴대전화 번호를 입력해주세요.' })
    +inputBlock({ className: 'input-verify hidden', labelText: '인증번호', type: 'text', placeholder: '인증번호를 입력해주세요.', clearButton: true, checkLabel: true, alertText: '인증번호는 4자리의 숫자입니다.' })
    button.btn-verify.btn-plain-text 
      span 인증번호 다시받기
      span.spinner
    button.btn-verify.btn-large 
      span 인증번호 받기
      span.spinner
    script(src="/js/join-phone.js")