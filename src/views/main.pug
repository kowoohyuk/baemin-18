extends layout.pug

block styles
  link(rel="stylesheet", href="/public/main.css")
block header
  header
    button.prev 
    h1 My배민
    button.next 
block content
  main
    img.banner(
      src="/public/imgs/banner.png"
      alt='배너'
    )
    .list(class=(nickname && ' ') || 'btn-login')
      .list__info
        img(
          src="/public/imgs/profile.png"
          alt='프로필'  
        )
        if nickname
          span #{nickname} 
        else
          span 로그인해주세요
      .arrow-more
    if nickname
      button.btn-large.btn-logout 로그아웃
    .category
      .category__inner
        .category__item
          img(
          src="/public/imgs/point.png"
          alt='포인트'  
          )
          span.category__name 포인트
      .category__inner
        .category__item
          img(
          src="/public/imgs/coupon.png"
          alt='쿠폰함'  
          )
          span.category__name 쿠폰함
      .category__inner
        .category__item
          img(
          src="/public/imgs/gift.png"
          alt='선물함'  
          )
          span.category__name 선물함

    .category
      .category__inner
        .category__item
          img(
          src="/public/imgs/wish.png"
          alt='찜'  
          )
          span.category__name 찜
      .category__inner
        .category__item
          img(
          src="/public/imgs/order.png"
          alt='주문내역'  
          )
          span.category__name 주문내역
      .category__inner
        .category__item
          img(
          src="/public/imgs/review.png"
          alt='리뷰관리'  
          )
          span.category__name 리뷰관리


    .grayborder
    .list
      .list__plant
        img(
          src="/public/imgs/sprout.png"
          alt='일회용품'  
        )
        span 일회용품 덜 쓰기, 함께해요!
      .arrow-more
    .grayborder
      
    .list
      .newbtn
        .newbtn__inner
          span 배민페이 등록
          img(
            src="/public/imgs/new.png"
            alt='new'  
          )
        span.newbtn__desc 배민페이로 결제하면 최대 5.5% 배민포인트가 적립됩니다!
      .arrow-more
    
    .list
      .newbtn
        .newbtn__inner
          span 가족계정 관리
          img(
            src="/public/imgs/new.png"
            alt='new'  
          )
        span.newbtn__desc 결제수단을 공유해 우리 가족의 끼니를 챙겨주세요.
      .arrow-more
    .list
      span 공지사항
      .arrow-more
    .list
      span 배민커넥트 지원
      .arrow-more
    script(src='/scripts/main.js')
        