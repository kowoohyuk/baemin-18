extends layout.pug

block styles
  link(rel="stylesheet", href="/public/login.css")
block includes
  include ./mixins/input-block.pug
block header
  header
    button.prev X
    h1 &nbsp;
    button 
block content
  main
    form(action="/login" method="post")
      div
        +inputBlock({ className: 'input-email', labelText: '', type: 'text', placeholder: '아이디 또는 이메일', clearButton: true, checkLabel: false, alertText: '아이디(이메일)를 입력해주세요.', name: 'email' })
      div
        +inputBlock({ className: 'input-pwd', labelText: '', type: 'password', placeholder: '비밀번호', clearButton: true, checkLabel: false, alertText: '비밀번호를 입력해주세요.', name: 'pwd' })
    div
      input.btn-login.active.btn-large(
        type='button'
        value='로그인'
      )
    div.btns-find
      button 아이디 찾기
      p
      button 비밀번호 찾기


    div.social
      button.socialbtn
        img(
          src="/public/imgs/fb.png"
          alt='페이스북'
        )
        span 페이스북으로 로그인
      button.socialbtn
        img(
          src="/public/imgs/naver.png"
          alt='네이버'
        )
        span 네이버로 로그인
      button.socialbtn
        img(
          src="/public/imgs/apple.png"
          alt='애플'
        )
        span Apple로 로그인

    div.join
      p 혹시, 배달의민족이 처음이신가요?
        a(href="/join") 회원가입
    script(src="/scripts/login.js")